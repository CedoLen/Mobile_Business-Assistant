    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.business_assistant.ui.home.HomeFragment"
        android:label="@string/news"
        tools:layout="@layout/news_screen" />

    <fragment
        android:id="@+id/navigation_finance"
        android:name="com.example.business_assistant.ui.dashboard.DashboardFragment"
        android:label="@string/finance"
        tools:layout="@layout/finance_screen" />

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.business_assistant.ui.notifications.NotificationsFragment"
        android:label="@string/tasks"
        tools:layout="@layout/tasks_screen" />
