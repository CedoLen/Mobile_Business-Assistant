<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Business_Assistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button_style" parent="Widget.AppCompat.Button">
        <item name="android:height">36px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:width">200sp</item>
        <item name="android:background">@drawable/main_button_shape</item>
    </style>

    <style name="edittext_style" parent="Widget.AppCompat.EditText">
        <item name="android:width">350sp</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:minHeight">52sp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:textColor">@color/textColor_edit</item>
        <item name="android:textColorHint">@color/textHintColor_edit</item>
        <item name="android:background">@drawable/main_edittext_shape</item>
    </style>

    <style name="outline_button_style" parent="Widget.AppCompat.Button">
        <item name="android:height">20px</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">14dp</item>
        <item name="android:width">200sp</item>s
        <item name="android:background">@drawable/outlined_button_shape</item>
    </style>
</resources>